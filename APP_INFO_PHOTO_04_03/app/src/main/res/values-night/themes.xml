        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="AJUSTES">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/ajustes</item>
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MULTIMEDIA">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/multimedia</item>
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>