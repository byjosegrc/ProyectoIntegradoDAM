<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.APP_INFO_PHOTO_04_03" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FF9800</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="HOME">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/home</item>
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="LOGIN">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/login</item>
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="AJUSTES">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/ajustes</item>
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="MULTIMEDIA">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/multimedia</item>
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>



    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>



</resources>